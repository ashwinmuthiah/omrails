<div class="box">
	<%# link_to "plus" () allows it to link to something after the comma. %>
	<%# the 'pin' path is essentially short for show_pin_path %>
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p class="description">
  	<%= pin.description %>
	</p>
	<p>
		<strong>
			<%# for the link to pin.user to work, need to add something to routes.rb - look there %>
			Posted by <%= link_to pin.user.name, pin.user %>
		</strong>
	</p>
  <% if current_user == pin.user %>
  	<p class="my_label">
			<%= link_to 'Edit', edit_pin_path(pin) %>
			<%= '|' %>
		  <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
  <% end %>
</div>
